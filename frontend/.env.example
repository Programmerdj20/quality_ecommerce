# ==================================
# API CONTABLE EXTERNA
# ==================================
# URL base de tu API contable (sistema existente en Heroku)
PUBLIC_API_CONTABLE_URL=https://tu-api-contable.herokuapp.com
# Token de autenticación para la API contable
PUBLIC_API_CONTABLE_TOKEN=tu_token_de_api_aqui

# ==================================
# STRAPI CMS
# ==================================
# URL del backend Strapi (desarrollo local o producción)
PUBLIC_STRAPI_URL=http://localhost:1337
# Token de API de Strapi (generado en Settings > API Tokens)
STRAPI_API_TOKEN=tu_strapi_token_aqui

# ==================================
# MERCADO PAGO
# ==================================
# Public Key de Mercado Pago (visible en el frontend)
PUBLIC_MP_PUBLIC_KEY=TEST-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
# Access Token de Mercado Pago (usado en el backend)
MP_ACCESS_TOKEN=TEST-xxxxxxxxxxxx-xxxxxx-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx-xxxxxxxxx
# Secret para validar webhooks de Mercado Pago
MP_WEBHOOK_SECRET=tu_webhook_secret_aqui

# ==================================
# CONFIGURACIÓN REGIONAL (COLOMBIA)
# ==================================
# Moneda por defecto
PUBLIC_CURRENCY=COP
# Locale para formateo de números y fechas
PUBLIC_LOCALE=es-CO
# Tasa de IVA en Colombia (0.19 = 19%)
PUBLIC_IVA_RATE=0.19

# ==================================
# CONFIGURACIÓN DE CACHÉ
# ==================================
# Tiempo de vida del caché de productos (en segundos)
CACHE_TTL_PRODUCTS=300
# Tiempo de vida del caché de configuración de temas (en segundos)
CACHE_TTL_THEME=60
# Tiempo de vida del caché de categorías (en segundos)
CACHE_TTL_CATEGORIES=600

# ==================================
# CONFIGURACIÓN DEL SITIO
# ==================================
# URL pública del sitio (para SEO y redirects de Mercado Pago)
PUBLIC_SITE_URL=https://tu-tienda.com
# Nombre del sitio
PUBLIC_SITE_NAME=Quality Ecommerce
