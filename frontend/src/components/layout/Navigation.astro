---
/**
 * Navigation - Menú de navegación principal (desktop)
 */

const currentPath = Astro.url.pathname;

const navItems = [
  { href: '/', label: 'Inicio' },
  { href: '/productos', label: 'Productos' },
  {
    href: '#',
    label: 'Categorías',
    children: [
      { href: '/productos/tecnologia', label: 'Tecnología' },
      { href: '/productos/hogar', label: 'Hogar' },
      { href: '/productos/moda', label: 'Moda' },
      { href: '/productos/deportes', label: 'Deportes' },
    ]
  },
];

function isActive(href: string): boolean {
  if (href === '/') return currentPath === '/';
  return currentPath.startsWith(href);
}
---

<nav class="hidden md:block">
  <ul class="flex items-center gap-6">
    {navItems.map((item) => (
      <li class="relative group">
        <a
          href={item.href}
          class={`
            font-medium transition-colors
            ${isActive(item.href)
              ? 'text-primary'
              : 'text-text hover:text-primary'
            }
          `}
        >
          {item.label}
          {item.children && (
            <svg
              class="inline-block w-4 h-4 ml-1"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 9l-7 7-7-7"
              />
            </svg>
          )}
        </a>

        {/* Dropdown menú (si tiene children) */}
        {item.children && (
          <div class="absolute left-0 mt-2 w-48 bg-background border border-gray-200 rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
            <ul class="py-2">
              {item.children.map((child) => (
                <li>
                  <a
                    href={child.href}
                    class={`
                      block px-4 py-2 text-sm transition-colors
                      ${isActive(child.href)
                        ? 'text-primary bg-gray-50'
                        : 'text-text hover:bg-gray-50'
                      }
                    `}
                  >
                    {child.label}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        )}
      </li>
    ))}
  </ul>
</nav>
